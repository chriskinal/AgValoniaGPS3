<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AgValoniaGPS.Desktop.Views.BrowserMapDialog"
        Title="Browser Map - Draw Boundary"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#2C3E50">

    <Window.Styles>
        <Style Selector="Button.ToolButton">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        <Style Selector="Button.ToolButton:pointerover">
            <Setter Property="Background" Value="#4A6278"/>
        </Style>
        <Style Selector="Button.ToolButton:pressed">
            <Setter Property="Background" Value="#1ABC9C"/>
        </Style>

        <Style Selector="Button.CancelButton">
            <Setter Property="Background" Value="#C0392B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        <Style Selector="Button.CancelButton:pointerover">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <Style Selector="Button.OkButton">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        <Style Selector="Button.OkButton:pointerover">
            <Setter Property="Background" Value="#2ECC71"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="15">
        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" CornerRadius="4" Padding="15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/bing.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Browser Map Boundary Drawing" Foreground="#1ABC9C" FontWeight="Bold" FontSize="18"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Draw a boundary on the satellite map in your browser."
                           Foreground="#BDC3C7" FontSize="13" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Status Panel -->
        <Border Grid.Row="1" Background="#34495E" CornerRadius="4" Padding="15" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Instructions:" Foreground="#1ABC9C" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="1." Foreground="#1ABC9C" FontWeight="Bold" Width="20"/>
                    <TextBlock Text="Click 'Open Map' to launch Bing Maps in your browser"
                               Foreground="White" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="2." Foreground="#1ABC9C" FontWeight="Bold" Width="20"/>
                    <TextBlock Text="Click on the map to add boundary points"
                               Foreground="White" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="3." Foreground="#1ABC9C" FontWeight="Bold" Width="20"/>
                    <TextBlock Text="Click 'Save Boundary' in the browser when done"
                               Foreground="White" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="4." Foreground="#1ABC9C" FontWeight="Bold" Width="20"/>
                    <TextBlock Text="Return here and click 'Import' to add the boundary"
                               Foreground="White" FontSize="13"/>
                </StackPanel>

                <Border Background="#1E2A36" CornerRadius="4" Padding="10" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Status:" Foreground="#BDC3C7" FontSize="12"/>
                        <TextBlock x:Name="StatusLabel" Text="Ready - Click 'Open Map' to begin"
                                   Foreground="#F39C12" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="PointCountLabel" Text=""
                                   Foreground="#1ABC9C" FontSize="13" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Bottom buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto,Auto,Auto" Margin="0,15,0,0">
            <Button Grid.Column="0" Classes="ToolButton" Width="100" Height="50"
                    Click="BtnOpenMap_Click" ToolTip.Tip="Open Bing Maps in browser">
                <StackPanel Orientation="Horizontal">
                    <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/bing.png" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="Open Map" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Border Grid.Column="1"/>

            <Button Grid.Column="2" Classes="ToolButton" Width="80" Height="50" Margin="0,0,10,0"
                    Click="BtnRefresh_Click" ToolTip.Tip="Check for saved boundary">
                <TextBlock Text="Refresh" Foreground="White"/>
            </Button>

            <Button Grid.Column="3" Classes="CancelButton" Width="60" Height="50" Margin="0,0,10,0"
                    Click="BtnCancel_Click" ToolTip.Tip="Cancel">
                <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/FileClose.png" Width="32" Height="32"/>
            </Button>

            <Button x:Name="BtnImport" Grid.Column="4" Classes="OkButton" Width="80" Height="50"
                    Click="BtnImport_Click" ToolTip.Tip="Import boundary" IsEnabled="False">
                <TextBlock Text="Import" Foreground="White" FontWeight="Bold"/>
            </Button>
        </Grid>
    </Grid>
</Window>
