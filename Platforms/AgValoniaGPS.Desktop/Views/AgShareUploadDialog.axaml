<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AgValoniaGPS.Desktop.Views"
        x:Class="AgValoniaGPS.Desktop.Views.AgShareUploadDialog"
        Title="AgShare Upload"
        Width="650"
        Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#2C3E50">

    <Window.Styles>
        <Style Selector="Button.ToolButton">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        <Style Selector="Button.ToolButton:pointerover">
            <Setter Property="Background" Value="#4A6278"/>
        </Style>
        <Style Selector="Button.ToolButton:pressed">
            <Setter Property="Background" Value="#1ABC9C"/>
        </Style>

        <Style Selector="Button.CancelButton">
            <Setter Property="Background" Value="#C0392B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        <Style Selector="Button.CancelButton:pointerover">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <Style Selector="Button.OkButton">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        <Style Selector="Button.OkButton:pointerover">
            <Setter Property="Background" Value="#2ECC71"/>
        </Style>

        <Style Selector="Button.SelectButton">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
        <Style Selector="Button.SelectButton:pointerover">
            <Setter Property="Background" Value="#5DADE2"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#1ABC9C"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#4A6278"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="15">
        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" CornerRadius="4,4,0,0" Padding="10,8">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/AgShare.png" Width="24" Height="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Upload to AgShare" Foreground="#1ABC9C" FontWeight="Bold" FontSize="16"/>
                </StackPanel>
                <Button Grid.Column="2" Classes="SelectButton" Click="BtnSelectAll_Click" Margin="0,0,5,0">
                    <TextBlock Text="Select All" VerticalAlignment="Center"/>
                </Button>
                <Button Grid.Column="3" Classes="SelectButton" Click="BtnDeselectAll_Click">
                    <TextBlock Text="Deselect All" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <!-- Field List with Checkboxes -->
        <Border Grid.Row="1" Background="#34495E" Margin="0,5,0,0" CornerRadius="4" Padding="5">
            <Grid RowDefinitions="Auto,*">
                <!-- Column Headers -->
                <Grid Grid.Row="0" ColumnDefinitions="30,*,80" Margin="8,4">
                    <TextBlock Grid.Column="0" Text="â˜‘" Foreground="#BDC3C7" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Field Name" Foreground="#BDC3C7" FontWeight="SemiBold" Margin="8,0,0,0"/>
                    <TextBlock Grid.Column="2" Text="Has Bnd" Foreground="#BDC3C7" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                </Grid>

                <ListBox x:Name="FieldListBox" Grid.Row="1" Background="Transparent"
                         SelectionMode="Multiple">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="views:LocalFieldListItem">
                            <Grid ColumnDefinitions="30,*,80">
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="{Binding HasBoundaryDisplay}"
                                           VerticalAlignment="Center" HorizontalAlignment="Right"
                                           Foreground="{Binding HasBoundaryColor}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Status and Options -->
        <Border Grid.Row="2" Background="#34495E" Padding="10" Margin="0,5,0,0" CornerRadius="4">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="StatusLabel" Text="Select fields to upload" Foreground="#BDC3C7" FontSize="12"/>
                    <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0"
                                 Height="6" Margin="0,5,0,0" IsVisible="False"/>
                </StackPanel>
                <CheckBox x:Name="PublicCheckBox" Grid.Column="1"
                          Content="Make public" Foreground="White"
                          VerticalAlignment="Center" Margin="10,0"/>
            </Grid>
        </Border>

        <!-- Bottom buttons: Cancel and Upload Selected -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto" Margin="0,15,0,0" VerticalAlignment="Bottom">
            <Border Grid.Column="0"/>
            <Button Grid.Column="1" Classes="CancelButton" Width="60" Height="60" Margin="0,0,10,0"
                    Click="BtnCancel_Click" ToolTip.Tip="Cancel">
                <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/FileClose.png" Width="40" Height="40"/>
            </Button>
            <Button x:Name="BtnUpload" Grid.Column="2" Classes="OkButton" Width="140" Height="60"
                    Click="BtnUpload_Click" ToolTip.Tip="Upload selected fields" IsEnabled="False">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Upload Selected" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
