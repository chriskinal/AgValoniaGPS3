<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AgValoniaGPS.Desktop.App"
             xmlns:local="using:AgValoniaGPS.Desktop"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <!-- Include shared resources (converters) -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://AgValoniaGPS.Views/Styles/SharedResources.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <!-- Include shared styles -->
        <StyleInclude Source="avares://AgValoniaGPS.Views/Styles/SharedStyles.axaml"/>
    </Application.Styles>
</Application>
