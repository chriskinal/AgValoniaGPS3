<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:steer="clr-namespace:AgValoniaGPS.ViewModels.Wizards.SteerWizard;assembly=AgValoniaGPS.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="400"
             x:Class="AgValoniaGPS.Views.Controls.Wizards.SteerWizard.AntennaOffsetStepView"
             x:DataType="steer:AntennaOffsetStepViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Title with skip indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="{Binding Title}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"/>
            <Border Background="#34495E"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    IsVisible="{Binding CanSkip}">
                <TextBlock Text="Optional"
                           FontSize="11"
                           Foreground="#95A5A6"/>
            </Border>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Description}"
                   FontSize="14"
                   Foreground="#BDC3C7"
                   TextWrapping="Wrap"
                   LineHeight="22"
                   Margin="0,0,0,24"/>

        <!-- Value input area -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Spacing="20">
            <!-- Quick position buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="12">
                <Button Content="Left"
                        Width="80" Height="44"
                        Background="{Binding IsLeft, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=#1ABC9C|#34495E}"
                        Foreground="White"
                        CornerRadius="8"
                        FontWeight="SemiBold"/>
                <Button Content="Center"
                        Width="80" Height="44"
                        Background="{Binding IsCenter, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=#1ABC9C|#34495E}"
                        Foreground="White"
                        CornerRadius="8"
                        FontWeight="SemiBold"/>
                <Button Content="Right"
                        Width="80" Height="44"
                        Background="{Binding IsRight, Converter={StaticResource BoolToBrushConverter}, ConverterParameter=#1ABC9C|#34495E}"
                        Foreground="White"
                        CornerRadius="8"
                        FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Input -->
            <Border Background="#2C3E50"
                    CornerRadius="12"
                    Padding="24,16"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <NumericUpDown Value="{Binding AntennaOffset}"
                                   Minimum="-5"
                                   Maximum="5"
                                   Increment="0.05"
                                   FormatString="F2"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Width="180"
                                   HorizontalContentAlignment="Center"
                                   Background="#1E2A35"
                                   Foreground="White"
                                   BorderBrush="#3498DB"
                                   BorderThickness="2"
                                   CornerRadius="8"/>
                    <TextBlock Text="{Binding Unit}"
                               FontSize="24"
                               Foreground="#95A5A6"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Hint -->
            <TextBlock Text="Positive = right of center, Negative = left of center"
                       FontSize="12"
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Validation message -->
        <Border Grid.Row="3"
                Background="#C0392B"
                CornerRadius="8"
                Padding="12"
                Margin="0,16,0,0"
                IsVisible="{Binding HasValidationError}">
            <TextBlock Text="{Binding ValidationMessage}"
                       Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
