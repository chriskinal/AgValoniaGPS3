<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:steer="clr-namespace:AgValoniaGPS.ViewModels.Wizards.SteerWizard;assembly=AgValoniaGPS.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="400"
             x:Class="AgValoniaGPS.Views.Controls.Wizards.SteerWizard.TrackWidthStepView"
             x:DataType="steer:TrackWidthStepViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,12"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Description}"
                   FontSize="14"
                   Foreground="#BDC3C7"
                   TextWrapping="Wrap"
                   LineHeight="22"
                   Margin="0,0,0,24"/>

        <!-- Value input area -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Spacing="20">
            <!-- Track Width Diagram - top/rear view of vehicle -->
            <Border Background="#2C3E50"
                    CornerRadius="8"
                    Padding="20"
                    HorizontalAlignment="Center">
                <Canvas Width="280" Height="100">
                    <!-- Vehicle body (top view) -->
                    <Rectangle Canvas.Left="90" Canvas.Top="10" Width="100" Height="80"
                               Fill="#34495E" RadiusX="4" RadiusY="4"/>
                    <!-- Left wheel -->
                    <Rectangle Canvas.Left="50" Canvas.Top="30" Width="30" Height="40"
                               Fill="#1ABC9C" RadiusX="4" RadiusY="4"/>
                    <!-- Right wheel -->
                    <Rectangle Canvas.Left="200" Canvas.Top="30" Width="30" Height="40"
                               Fill="#1ABC9C" RadiusX="4" RadiusY="4"/>
                    <!-- Track width arrow line -->
                    <Line StartPoint="0,0" EndPoint="150,0"
                          Canvas.Left="65" Canvas.Top="80"
                          Stroke="#3498DB" StrokeThickness="2"/>
                    <!-- Arrow heads -->
                    <Polygon Canvas.Left="60" Canvas.Top="75" Points="0,5 10,5 5,0" Fill="#3498DB"/>
                    <Polygon Canvas.Left="210" Canvas.Top="75" Points="0,5 10,5 5,0" Fill="#3498DB"/>
                    <!-- Track width label -->
                    <TextBlock Canvas.Left="110" Canvas.Top="83" Text="Track Width"
                               Foreground="#3498DB" FontSize="12" FontWeight="SemiBold"/>
                </Canvas>
            </Border>

            <!-- Input -->
            <Border Background="#2C3E50"
                    CornerRadius="12"
                    Padding="24,16"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <NumericUpDown Value="{Binding TrackWidth}"
                                   Minimum="0.5"
                                   Maximum="10"
                                   Increment="0.05"
                                   FormatString="F2"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Width="180"
                                   HorizontalContentAlignment="Center"
                                   Background="#1E2A35"
                                   Foreground="White"
                                   BorderBrush="#3498DB"
                                   BorderThickness="2"
                                   CornerRadius="8"/>
                    <TextBlock Text="{Binding Unit}"
                               FontSize="24"
                               Foreground="#95A5A6"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Validation message -->
        <Border Grid.Row="3"
                Background="#C0392B"
                CornerRadius="8"
                Padding="12"
                Margin="0,16,0,0"
                IsVisible="{Binding HasValidationError}">
            <TextBlock Text="{Binding ValidationMessage}"
                       Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
