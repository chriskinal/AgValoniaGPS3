<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AgValoniaGPS.ViewModels;assembly=AgValoniaGPS.ViewModels"
             xmlns:conv="clr-namespace:AgValoniaGPS.Views.Converters;assembly=AgValoniaGPS.Views"
             xmlns:config="clr-namespace:AgValoniaGPS.Views.Controls.Dialogs.Configuration;assembly=AgValoniaGPS.Views"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="750"
             x:Class="AgValoniaGPS.Views.Controls.Dialogs.ConfigurationDialog"
             x:DataType="vm:ConfigurationViewModel"
             IsVisible="{Binding IsDialogVisible, FallbackValue=False}">

    <UserControl.Styles>
        <!-- Main TabControl styling for left icon strip -->
        <Style Selector="TabControl.MainConfigTabs">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="TabControl.MainConfigTabs > TabItem">
            <Setter Property="Background" Value="#DD34495E"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="MinWidth" Value="64"/>
            <Setter Property="MinHeight" Value="64"/>
        </Style>
        <Style Selector="TabControl.MainConfigTabs > TabItem:selected">
            <Setter Property="Background" Value="#DD4A9A7E"/>
        </Style>
        <Style Selector="TabControl.MainConfigTabs > TabItem:pointerover">
            <Setter Property="Background" Value="#DD475A6E"/>
        </Style>
    </UserControl.Styles>

    <!-- Full screen modal overlay -->
    <Grid Background="#80000000">
        <!-- Main dialog container - fixed size to prevent resizing on tab switch -->
        <Border Background="#DD1E2A38"
                CornerRadius="8"
                Margin="20"
                Width="900"
                Height="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#444"
                BorderThickness="1"
                BoxShadow="0 8 32 #80000000">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header with title -->
                <Border Grid.Row="0" Background="#DD2C3E50" Padding="16,8">
                    <TextBlock Text="Configuration" FontSize="18" FontWeight="Bold" Foreground="White"/>
                </Border>

                <!-- Main content area with TabControl -->
                <TabControl Grid.Row="1" Classes="MainConfigTabs" TabStripPlacement="Left" Background="#DD253545"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- Vehicle Tab -->
                    <TabItem ToolTip.Tip="Vehicle">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_VehicleMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:VehicleConfigTab/>
                    </TabItem>

                    <!-- Tool Tab -->
                    <TabItem ToolTip.Tip="Implement/Tool">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_ImplementMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:ToolConfigTab/>
                    </TabItem>

                    <!-- U-Turn Tab -->
                    <TabItem ToolTip.Tip="U-Turn">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_UTurnMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:UTurnConfigTab/>
                    </TabItem>

                    <!-- Machine Control Tab -->
                    <TabItem ToolTip.Tip="Machine Control">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_ModulesMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:MachineControlConfigTab/>
                    </TabItem>

                    <!-- Tram Lines Tab -->
                    <TabItem ToolTip.Tip="Tram Lines">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_TramMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:TramConfigTab/>
                    </TabItem>

                    <!-- Data Sources Tab -->
                    <TabItem ToolTip.Tip="Data Sources">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_SourcesMenu.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:SourcesConfigTab/>
                    </TabItem>

                    <!-- Display Tab -->
                    <TabItem ToolTip.Tip="Display">
                        <TabItem.Header>
                            <Image Source="avares://AgValoniaGPS.Views/Assets/Icons/Config/Con_Display.png"
                                   Width="40" Height="40" Stretch="Uniform"/>
                        </TabItem.Header>
                        <config:DisplayConfigTab/>
                    </TabItem>
                </TabControl>

                <!-- Numeric Input Overlay -->
                <Border Grid.Row="1" Background="#CC000000"
                        IsVisible="{Binding IsNumericInputVisible}"
                        ZIndex="100">
                    <Border Background="#DD1E2A38" CornerRadius="12" Padding="20"
                            Width="360" Height="440"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            BorderBrush="#555" BorderThickness="1">
                        <Grid RowDefinitions="Auto,Auto,*,Auto">
                            <!-- Title -->
                            <TextBlock Grid.Row="0" Text="{Binding NumericInputTitle}"
                                       FontSize="20" FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" Margin="0,0,0,12"/>

                            <!-- Value Display -->
                            <Border Grid.Row="1" Background="#DD2C3E50" CornerRadius="6"
                                    Padding="20,16" Margin="0,0,0,16" MinWidth="280">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                    <TextBlock Text="{Binding NumericInputDisplayText}"
                                               FontSize="42" FontWeight="Bold" Foreground="White"
                                               MinWidth="120" TextAlignment="Right"/>
                                    <TextBlock Text="{Binding NumericInputUnit}"
                                               FontSize="24" Foreground="#AAA" VerticalAlignment="Bottom" Margin="0,0,0,6"/>
                                </StackPanel>
                            </Border>

                            <!-- Keypad Grid -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*" Margin="0,0,0,16">
                                <Grid.Styles>
                                    <Style Selector="Button.KeypadButton">
                                        <Setter Property="Background" Value="#DD34495E"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontSize" Value="24"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="CornerRadius" Value="8"/>
                                        <Setter Property="Margin" Value="4"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Style>
                                    <Style Selector="Button.KeypadButton:pointerover">
                                        <Setter Property="Background" Value="#DD475A6E"/>
                                    </Style>
                                    <Style Selector="Button.ClearButton">
                                        <Setter Property="Background" Value="#DD8E5526"/>
                                    </Style>
                                    <Style Selector="Button.ClearButton:pointerover">
                                        <Setter Property="Background" Value="#DDA96B30"/>
                                    </Style>
                                </Grid.Styles>

                                <!-- Row 0: 7 8 9 ⌫ -->
                                <Button Grid.Row="0" Grid.Column="0" Classes="KeypadButton" Content="7"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="7"/>
                                <Button Grid.Row="0" Grid.Column="1" Classes="KeypadButton" Content="8"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="8"/>
                                <Button Grid.Row="0" Grid.Column="2" Classes="KeypadButton" Content="9"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="9"/>
                                <Button Grid.Row="0" Grid.Column="3" Classes="KeypadButton" Content="⌫"
                                        Command="{Binding NumericInputBackspaceCommand}"/>

                                <!-- Row 1: 4 5 6 C -->
                                <Button Grid.Row="1" Grid.Column="0" Classes="KeypadButton" Content="4"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="4"/>
                                <Button Grid.Row="1" Grid.Column="1" Classes="KeypadButton" Content="5"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="5"/>
                                <Button Grid.Row="1" Grid.Column="2" Classes="KeypadButton" Content="6"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="6"/>
                                <Button Grid.Row="1" Grid.Column="3" Classes="KeypadButton ClearButton" Content="C"
                                        Command="{Binding NumericInputClearCommand}"/>

                                <!-- Row 2: 1 2 3 ± -->
                                <Button Grid.Row="2" Grid.Column="0" Classes="KeypadButton" Content="1"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="1"/>
                                <Button Grid.Row="2" Grid.Column="1" Classes="KeypadButton" Content="2"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="2"/>
                                <Button Grid.Row="2" Grid.Column="2" Classes="KeypadButton" Content="3"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="3"/>
                                <Button Grid.Row="2" Grid.Column="3" Classes="KeypadButton" Content="±"
                                        Command="{Binding NumericInputNegateCommand}"
                                        IsVisible="{Binding NumericInputAllowNegative}"/>

                                <!-- Row 3: 0 . -->
                                <Button Grid.Row="3" Grid.Column="0" Classes="KeypadButton" Content="0"
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="0"/>
                                <Button Grid.Row="3" Grid.Column="1" Classes="KeypadButton" Content="."
                                        Command="{Binding NumericInputDigitCommand}" CommandParameter="."
                                        IsVisible="{Binding !NumericInputIntegerOnly}"/>
                            </Grid>

                            <!-- Action Buttons -->
                            <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="8">
                                <Button Grid.Column="0" Background="#E74C3C" Foreground="White"
                                        FontSize="16" FontWeight="Bold" CornerRadius="8" Height="48"
                                        Command="{Binding CancelNumericInputCommand}"
                                        HorizontalContentAlignment="Center">
                                    <TextBlock Text="Cancel"/>
                                </Button>
                                <Button Grid.Column="1" Background="#4A9A7E" Foreground="White"
                                        FontSize="16" FontWeight="Bold" CornerRadius="8" Height="48"
                                        Command="{Binding ConfirmNumericInputCommand}"
                                        HorizontalContentAlignment="Center">
                                    <TextBlock Text="OK"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </Border>

                <!-- Footer with profile info and action buttons -->
                <Border Grid.Row="2" Background="#DD2C3E50" Padding="16,12">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto">
                        <!-- Current profile -->
                        <TextBlock Text="{Binding SelectedProfileName, StringFormat='Current: {0}'}"
                                   Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>

                        <!-- Units display -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                            <TextBlock Text="Units:" Foreground="#AAA" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding IsMetric, Converter={x:Static conv:BoolToStringConverter.Instance}, ConverterParameter='Metric|Imperial'}"
                                       Foreground="#4A9" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Width display -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" Margin="0,0,24,0">
                            <TextBlock Text="Width:" Foreground="#AAA" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ToolWidth, StringFormat='{}{0:F2} m'}"
                                       Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Apply button (checkmark) -->
                        <Button Grid.Column="5" Width="48" Height="48"
                                Background="#4A9A7E" CornerRadius="24"
                                Command="{Binding ApplyCommand}"
                                ToolTip.Tip="Apply and Close">
                            <TextBlock Text="✓" FontSize="24" Foreground="White" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
