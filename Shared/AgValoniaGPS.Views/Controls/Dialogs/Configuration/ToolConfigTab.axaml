<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AgValoniaGPS.ViewModels;assembly=AgValoniaGPS.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="AgValoniaGPS.Views.Controls.Dialogs.Configuration.ToolConfigTab"
             x:DataType="vm:ConfigurationViewModel">

    <UserControl.Styles>
        <Style Selector="Border.SettingRow">
            <Setter Property="Background" Value="#DD2C3E50"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style Selector="Border.ValueBox">
            <Setter Property="Background" Value="#DD1E2A38"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Spacing="8" Margin="16">
            <TextBlock Text="Tool/Implement Configuration" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>

            <TextBlock Text="Tool Type" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,8"/>
            <WrapPanel>
                <RadioButton Content="Front Fixed" GroupName="ToolType" Margin="0,0,16,0"
                             IsChecked="{Binding IsToolFrontFixed}"/>
                <RadioButton Content="Rear Fixed" GroupName="ToolType" Margin="0,0,16,0"
                             IsChecked="{Binding IsToolRearFixed}"/>
                <RadioButton Content="TBT" GroupName="ToolType" Margin="0,0,16,0"
                             IsChecked="{Binding IsToolTBT}"/>
                <RadioButton Content="Trailing" GroupName="ToolType"
                             IsChecked="{Binding IsToolTrailing}"/>
            </WrapPanel>

            <TextBlock Text="Tool Dimensions" FontWeight="SemiBold" Foreground="White" Margin="0,16,0,8"/>
            <Border Classes="SettingRow">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Tool Width" Foreground="White" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Classes="ValueBox">
                        <TextBlock Text="{Binding ToolWidth, StringFormat='{}{0:F2} m'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
            <Border Classes="SettingRow">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Tool Overlap" Foreground="White" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Classes="ValueBox">
                        <TextBlock Text="{Binding ToolOverlap, StringFormat='{}{0:F2} m'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
            <Border Classes="SettingRow">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Tool Offset" Foreground="White" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Classes="ValueBox">
                        <TextBlock Text="{Binding ToolOffset, StringFormat='{}{0:F2} m'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>

            <TextBlock Text="Hitch" FontWeight="SemiBold" Foreground="White" Margin="0,16,0,8"/>
            <Border Classes="SettingRow">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Hitch Length" Foreground="White" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Classes="ValueBox">
                        <TextBlock Text="{Binding HitchLength, StringFormat='{}{0:F2} m'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
            <Border Classes="SettingRow">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Trailing Hitch Length" Foreground="White" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Classes="ValueBox">
                        <TextBlock Text="{Binding TrailingHitchLength, StringFormat='{}{0:F2} m'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
