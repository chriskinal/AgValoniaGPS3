<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AgValoniaGPS.ViewModels;assembly=AgValoniaGPS.ViewModels"
             xmlns:subtabs="clr-namespace:AgValoniaGPS.Views.Controls.Dialogs.Configuration.ToolSubTabs"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="600"
             x:Class="AgValoniaGPS.Views.Controls.Dialogs.Configuration.ToolConfigTab"
             x:DataType="vm:ConfigurationViewModel">

    <UserControl.Styles>
        <!-- Sub-tab styling - give TabControl a solid background -->
        <Style Selector="TabControl.SubTabs">
            <Setter Property="Background" Value="#DD253545"/>
        </Style>
        <Style Selector="TabControl.SubTabs > TabItem">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Background" Value="#DD2C3E50"/>
            <Setter Property="Foreground" Value="#AAA"/>
        </Style>
        <Style Selector="TabControl.SubTabs > TabItem:selected">
            <Setter Property="Background" Value="#DD1E8449"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TabControl.SubTabs > TabItem:pointerover">
            <Setter Property="Background" Value="#DD3C4E60"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <StackPanel Margin="16,16,16,8">
            <TextBlock Text="Tool/Implement Configuration" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="Configure your implement attachment, dimensions, sections, and switches"
                       Foreground="#888" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Sub-Tab Control with solid background -->
        <TabControl Grid.Row="1" Classes="SubTabs" Margin="8,0,8,8">
            <TabItem Header="Type">
                <subtabs:ToolTypeSubTab/>
            </TabItem>
            <TabItem Header="Hitch">
                <subtabs:ToolHitchSubTab/>
            </TabItem>
            <TabItem Header="Timing">
                <subtabs:ToolTimingSubTab/>
            </TabItem>
            <TabItem Header="Offset">
                <subtabs:ToolOffsetSubTab/>
            </TabItem>
            <TabItem Header="Pivot">
                <subtabs:ToolPivotSubTab/>
            </TabItem>
            <TabItem Header="Sections">
                <subtabs:ToolSectionsSubTab/>
            </TabItem>
            <TabItem Header="Switches">
                <subtabs:ToolSwitchesSubTab/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
