<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AgValoniaGPS.ViewModels;assembly=AgValoniaGPS.ViewModels"
             xmlns:conv="clr-namespace:AgValoniaGPS.Views.Converters;assembly=AgValoniaGPS.Views"
             mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="600"
             x:Class="AgValoniaGPS.Views.Controls.Dialogs.Configuration.SourcesSubTabs.NtripSubTab"
             x:DataType="vm:ConfigurationViewModel">

    <UserControl.Styles>
        <!-- Section Header Style -->
        <Style Selector="TextBlock.SectionHeader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4A9A7E"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Settings Panel -->
        <Style Selector="Border.SettingsPanel">
            <Setter Property="Background" Value="#DD253545"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- Tappable Value Button Style -->
        <Style Selector="Button.TappableValue">
            <Setter Property="Background" Value="#DD1E2A38"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style Selector="Button.TappableValue:pointerover">
            <Setter Property="Background" Value="#DD2A3A4A"/>
            <Setter Property="BorderBrush" Value="#4A9A7E"/>
        </Style>

        <!-- Toggle Button with custom template for instant feedback -->
        <Style Selector="Button.ToggleButton">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="16,8,16,16">

            <!-- NTRIP Server Settings -->
            <Border Classes="SettingsPanel">
                <StackPanel Spacing="12">
                    <TextBlock Text="NTRIP Caster Settings" Classes="SectionHeader"/>

                    <!-- Caster Host and Port on same line -->
                    <Grid ColumnDefinitions="*,100" ColumnSpacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Caster Host" Foreground="#AAA" FontSize="12"/>
                            <Button Classes="TappableValue" Command="{Binding EditNtripCasterHostCommand}">
                                <TextBlock Text="{Binding Connections.NtripCasterHost, TargetNullValue='(not set)', FallbackValue='(not set)'}"
                                           Foreground="White" FontWeight="SemiBold"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Port" Foreground="#AAA" FontSize="12"/>
                            <Button Classes="TappableValue" Command="{Binding EditNtripCasterPortCommand}">
                                <TextBlock Text="{Binding Connections.NtripCasterPort}"
                                           Foreground="White" FontWeight="SemiBold"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Mount Point -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Mount Point" Foreground="#AAA" FontSize="12"/>
                        <Button Classes="TappableValue" Command="{Binding EditNtripMountPointCommand}">
                            <TextBlock Text="{Binding Connections.NtripMountPoint, TargetNullValue='(not set)', FallbackValue='(not set)'}"
                                       Foreground="White" FontWeight="SemiBold"/>
                        </Button>
                    </StackPanel>

                    <!-- Username and Password on same line -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Username" Foreground="#AAA" FontSize="12"/>
                            <Button Classes="TappableValue" Command="{Binding EditNtripUsernameCommand}">
                                <TextBlock Text="{Binding Connections.NtripUsername, TargetNullValue='(not set)', FallbackValue='(not set)'}"
                                           Foreground="White" FontWeight="SemiBold"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="Password" Foreground="#AAA" FontSize="12"/>
                            <Button Classes="TappableValue" Command="{Binding EditNtripPasswordCommand}">
                                <Panel>
                                    <TextBlock Text="••••••••" Foreground="White" FontWeight="SemiBold"
                                               IsVisible="{Binding Connections.NtripPassword, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <TextBlock Text="(not set)" Foreground="#888" FontWeight="SemiBold"
                                               IsVisible="{Binding Connections.NtripPassword, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                </Panel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Connection Control -->
            <Border Classes="SettingsPanel">
                <StackPanel Spacing="12">
                    <TextBlock Text="Connection" Classes="SectionHeader"/>

                    <!-- Connect/Disconnect Buttons -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0" Background="#27AE60" Foreground="White"
                                FontWeight="SemiBold" CornerRadius="6" Height="40"
                                Command="{Binding ConnectNtripCommand}"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Connect"/>
                        </Button>
                        <Button Grid.Column="1" Background="#E67E22" Foreground="White"
                                FontWeight="SemiBold" CornerRadius="6" Height="40"
                                Command="{Binding DisconnectNtripCommand}"
                                HorizontalContentAlignment="Center">
                            <TextBlock Text="Disconnect"/>
                        </Button>
                    </Grid>

                    <!-- Status Display -->
                    <Border Background="#DD1E2A38" CornerRadius="6" Padding="12,8">
                        <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto" RowSpacing="6">
                            <!-- Status Row -->
                            <TextBlock Text="Status:" Foreground="#AAA" FontSize="12" VerticalAlignment="Center"/>
                            <Ellipse Grid.Column="1" Width="10" Height="10" Margin="8,0"
                                     VerticalAlignment="Center"
                                     Fill="{Binding IsNtripConnected, Converter={StaticResource BoolToColorConverter}}"/>
                            <TextBlock Grid.Column="2" Text="{Binding NtripStatus}"
                                       Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <!-- RTCM Received Row -->
                            <TextBlock Grid.Row="1" Text="RTCM Received:" Foreground="#AAA" FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding NtripBytesReceived}"
                                       Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Auto Connect Toggle -->
                    <Button Classes="ToggleButton"
                            Background="{Binding Connections.NtripAutoConnect, Converter={x:Static conv:BoolToToggleBackgroundConverter.Instance}}"
                            BorderBrush="{Binding Connections.NtripAutoConnect, Converter={x:Static conv:BoolToToggleBorderConverter.Instance}}"
                            Command="{Binding ToggleNtripAutoConnectCommand}"
                            HorizontalAlignment="Stretch">
                        <TextBlock Text="Connect on Startup" Foreground="White" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
